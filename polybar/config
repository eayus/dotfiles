[bar/top]
monitor = HDMI-0
width = 100%
height = 25 
bottom = false
padding-left = 5
padding-right = 5

background = #00FFFFFF
foreground = #FFFFFF

font-0 = FiraMono:style=Regular:size=9;1
font-2 = Dina:style=Regular:pixelsize=13;1
font-1 = FontAwesome:fontformat=truetype:size=8;1

wm-name = topbar

modules-left = bspwm
modules-center = date
modules-right = song 

[module/date]
type = custom/script
exec = echo "  $(date +'%I:%M  %A %d %B')"
interval = 1
click-left = gnome-calendar
 

[module/song]
type = custom/script
exec = mpc | head -1
interval = 2
click-left = mpc toggle

